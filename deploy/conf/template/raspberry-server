upstream django {
    server unix:///var/run/uwsgi/uwsgi.sock;
}

server {
    listen      80;
    server_name raspberry-server.local;
    charset     utf-8;
    access_log  /home/pi-srv/app/RaspberryServer/pisrv/logs/access.log;
    error_log   /home/pi-srv/app/RaspberryServer/pisrv/logs/error.log; 

    location /static {
        alias /home/pi-srv/app/RaspberryServer/pisrv/collectstatic;
    }

    location / {
        uwsgi_pass django;
        include /home/pi-srv/app/RaspberryServer/deploy/conf/pi-srv/uwsgi_params;
    }
}